<div class="m-3">

  <h1>Tasks</h1>

  <% @tasks.each do |task| %>

  <div class = "card mt-3">

    <div class="d-flex align-items-center">

      <div class="d-flex image-task">
        <div class="d-flex align-items-center">
          <img src="/images/sjacob_3.jpg" alt="" class="avatar">
          <p class="m-0 task_name pl-3"><%= link_to "#{task.title}", task_path(task)%></p>
        </div>
      </div>

      <div class="d-flex justify-content-end">
        <% if task.completed %>
          <a href="#" class="btn-complete m-0">Complete</a>
        <% else %>
          <a href="#" class="btn-incomplete p-0">Pending</a>
        <% end %>
      </div>
      </div>
    </div>
  <% end %>
  </div>

<%= link_to "Add a new task", tasks_new_path %>
</div>


